# 企业微信智能助手环境配置模板
# 请复制此文件为 .env 并填入实际配置值

# ============== 企业微信配置 ==============
# 企业ID
WECOM_CORP_ID=your_corp_id_here

# 应用ID
WECOM_AGENT_ID=your_agent_id_here

# 应用Secret
WECOM_SECRET=your_secret_here

# 回调验证Token
WECOM_TOKEN=your_token_here

# 消息加解密密钥
WECOM_ENCODING_AES_KEY=your_encoding_aes_key_here

# ============== LLM模型配置 ==============
# API基础URL（可选，用于自定义API端点）
OPENAI_API_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1

# 视觉模型API基础URL（可选）
OPENAI_API_VISION_BASE=https://dashscope.aliyuncs.com/compatible-mode/v1

# API密钥
OPENAI_API_KEY=your_api_key_here

# 主要语言模型名称
LLM_MODEL_NAME=qwen-max

# 视觉模型名称
VISION_MODEL_NAME=qwen-vl-max

# 嵌入模型名称
EMBEDDING_MODEL_NAME=text-embedding-v2

# DashScope API密钥（如果使用阿里云模型）
DASHSCOPE_API_KEY=your_dashscope_api_key_here

# ============== 性能配置 ==============
# 请求超时时间（秒）
REQUEST_TIMEOUT=30

# 最大并发请求数
MAX_CONCURRENT_REQUESTS=10

# 日志级别（DEBUG, INFO, WARNING, ERROR, CRITICAL）
LOG_LEVEL=INFO